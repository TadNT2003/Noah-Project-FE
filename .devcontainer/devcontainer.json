{
  // Dev container name
  "name": "NOAH_FE dev",
  // Build Dockerfile for dev container
  "build": {
    "dockerfile": "Dockerfile",
    "options": ["--tag=noah_fe_dev:0.0"]
  },

  // Ports inside the container available locally.
  "forwardPorts": [3000],

  // Commands after the container is created i.e install node dependencies
  "postCreateCommand": "npm install --legacy-peer-deps",

  // Custom properties for specific product i.e VS Code extensions
  "customizations": {
    "vscode": {
      "extensions": [
        "eamodio.gitlens",
        "dsznajder.es7-react-js-snippets",
        "dbaeumer.vscode-eslint",
        "ecmel.vscode-html-css",
        "ms-vscode.vscode-typescript-next",
        "csstools.postcss",
        "esbenp.prettier-vscode",
        "austenc.tailwind-docs"
      ]
    }
  }

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
